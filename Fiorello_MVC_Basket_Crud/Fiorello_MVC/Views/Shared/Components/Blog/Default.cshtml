@model Dictionary<string, string>

@{
    var blogs = new List<dynamic>();

    for (int i = 1; i <= 3; i++)
    {
        var image = Model[$"BlogImage{i}"];
        var title = Model[$"BlogTitle{i}"];
        var description = Model[$"BlogDescription{i}"];
		var date = Model["BlogDate"];

        blogs.Add(new
        {
            Image = image,
			Title = title,
            Description = description,
            Date = date
        });
    }
}

<!-- BLOG START -->

<section id="blog">
    <div class="container">
        <div class="row py-5">
            <div class="offset-lg-3 col-lg-6">
                <div class="section-title">
                    <h1>From our Blog</h1>
                    <p class="text-black-50">
                        A perfect blend of creativity, energy, communication, happiness and
                        love. Let us arrange
                        a smile for you.
                    </p>
                </div>
            </div>
        </div>
        <div class="row pb-5">
            @foreach (var item in blogs)
            {
                <div class="col-md-6 col-lg-4">
                    <div class="item">
                        <div class="img position-relative">
                            <img src="~/assets/img/@item.Image" class="img-fluid" alt="">
                            <div class="date rounded bg-light position-absolute py-1 px-2">
                                <span>@item.Date</span>
                            </div>
                        </div>
                        <div class="text mt-3 text-center px-5">
                            <h5>@item.Title</h5>
                            <p class="text-black-50">@item.Description</p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>

<!-- BLOG END -->
