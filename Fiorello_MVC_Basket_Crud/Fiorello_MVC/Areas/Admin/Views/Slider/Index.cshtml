@model IEnumerable<SliderVM>
<h3>Admin Cruds</h3>

<div>
    <a class="btn btn-success mb-3" asp-area="Admin" asp-controller="Slider" asp-action="Create">Create</a>
</div>
<ul class="list-group">
    @foreach (var item in Model)
    {
        <li class="list-group-item d-flex justify-content-between align-items-center">
            <img src="~/assets/img/@item.Image" style="width:300px; height:200px" />
            <div>
                <a class="btn btn-primary" asp-area="Admin" asp-controller="Slider" asp-action="Detail" asp-route-id="@item.Id">Detail</a>
                <a class="btn btn-warning" asp-area="Admin" asp-controller="Slider" asp-action="Update" asp-route-id="@item.Id">Update</a>
                <a class="btn btn-danger delete-slider" data-id="@item.Id">Delete</a>
            </div>
        </li>

    }
</ul>
